<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://bootswatch.com/5/sandstone/bootstrap.min.css">
    <title>
        <%= title %>
    </title>
</head>

<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= typeof active != "undefined" && active == "home" ? "active" : "" %>" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof active != "undefined" && active == "home" ? "active" : "" %></a>" href="/login">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof active != "undefined" && active == "home" ? "active" : "" %></a>" href="#">Pricing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof active != "undefined" && active == "home" ? "active" : "" %></a>" href="#">About</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <% if (req.isAuthenticated()) { %>
                        <a class="btn btn-secondary my-2 my-sm-0" href="/logout">Logout</a>
                        <% } else { %>
                            <a class="btn btn-secondary my-2 my-sm-0" href="/login">Login</a>
                            <% } %>
                </div>
            </div>
    </nav>


    <div class="container">
        <%- body %>
    </div>

    <script src="./javascript/highlight-tab.js"></script>
</body>

</html>